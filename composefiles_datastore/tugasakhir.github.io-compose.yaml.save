services:
    nginx:
        image: nginx
        depends_on:
            - php-fpm
        networks:
            - sail
        volumes:
            - ./:/var/www/
            - ./docker:/etc/nginx/templates
        ports:
            - "9080:90"
        environment:
            - NGINX_HOST=example.lapor
            - NGINX_PORT=90

    php-fpm:
        image: cyberduck/php-fpm-laravel:8.1
        networks:
            - sail
        volumes:
            - ./:/var/www
        environment:
            - XDEBUG=TRUE

    networks:
        sail:
            driver: bridge
