---
version: "2.4"
services:
  web:
      build: 
        dockerfile: ./docker/nginx/Dockerfile
        context: .
      ports:
        - "8051:80"
      volumes:
        - ./site.conf:/etc/nginx/conf.d/default.conf
      links:
        - php

  php:
      build: 
        dockerfile: ./docker/php-fpm/Dockerfile
        context: .
      volumes:
        - ./log.ini:/usr/local/etc/php-fpm.d/zz-log.ini
        - ./api-variables.env:/app/.env
