version: "3"
services:
    nginx:
        image: nginx
        restart: always
        volumes:
        - ./nginx.conf:/etc/nginx/nginx.conf
        network_mode: "host"
    shadowsocks:
        image: shadowsocks/shadowsocks-libev
        restart: always
        network_mode: "host"
        environment:
            SERVER_ADDR: 127.0.0.1
            SERVER_PORT: 8388
            PASSWORD: <%-config.chachaPassword%>
            METHOD: xchacha20-ietf-poly1305
    shadowsocks2:
        image: shadowsocks/shadowsocks-libev
        restart: always
        network_mode: "host"
        environment:
            SERVER_ADDR: 127.0.0.1
            SERVER_PORT: 8389
            PASSWORD: <%-config.aesPassword%>
            METHOD: aes-256-gcm
