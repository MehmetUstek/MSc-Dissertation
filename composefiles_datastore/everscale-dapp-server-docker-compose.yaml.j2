services:
  arangodb:
    build:
      context: ./build
    container_name: {{ arangodb_container_name }}
    hostname: {{ arangodb_container_name }}
    restart: unless-stopped
    environment:
      ARANGO_NO_AUTH: 1
    volumes:
      - db3:/var/lib/arangodb3
      - data:/arango/db
      - ./arango-config:/arango/config
    expose:
      - "{{ arangodb_port }}"
    mem_limit: {{ arangodb_mem_limit }}

networks:
  default:
    name: {{ arangodb_net }}
    external: true
volumes:
  data:
  db3:
  datani:
  db3ni:
